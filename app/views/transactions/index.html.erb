<p id="notice"><%= notice %></p>

<h1>Listing Transactions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Payee</th>
      <th>Notes</th>
      <th>Type</th>
      <th>Occurs</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.payee %></td>
        <td><%= transaction.notes %></td>
        <td><%= transaction.txn_type %></td>
        <td><%= transaction.occurs %></td>
        <td><%= transaction.amount %></td>
        <td><%= link_to 'Show', budget_transaction_path(id: transaction) %></td>
        <td><%= link_to 'Edit', edit_budget_transaction_path(id: transaction) %></td>
        <td><%= link_to 'Destroy', budget_transaction_path(id: transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

