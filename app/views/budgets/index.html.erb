<h1>Budgets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.title %></td>
        <td>
          <%= link_to 'Show', budget %>
          <%= link_to 'Transactions', budget_transactions_path(budget_id: budget.id) %>
          <%= link_to 'Edit', edit_budget_path(budget) %>
          <%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget', new_budget_path %>
